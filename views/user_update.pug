extends ../layout/common.pug
block content
 div(class="container mt-4")
  h1 Update User
  ul
   each x in dataDetail
    li Tên :
     span(style="font-weight: 600; color: #333; margin-left: 5px") #{x.name}
    li Tuổi:
     span(style="color: #333; margin-left: 5px") #{x.age}
    li Giới Tính:
     span(style="color: #333; margin-left: 5px") #{x.sex}

    h3 Edit
    form(class="form-group",action="/users/update/" + x.id, method="POST")
      label Tên 
      input(class="form-control w-50",type="text", name="name")
      br
      label Tuổi 
      input(class="form-control w-50",type="text", name="age")
      br
      label Giới Tính
      select(class="form-control w-25",name="GioiTinh")
        option(value="Nam") Nam
        option(value="Nữ") Nữ
        br
      div
       button(class="btn btn-info mt-3") submit edit

